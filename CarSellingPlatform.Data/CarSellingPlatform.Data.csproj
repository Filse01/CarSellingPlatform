    <None Update="Seeding\Input\Cars.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Seeding\Input\Categories.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Seeding\Input\Engines.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
