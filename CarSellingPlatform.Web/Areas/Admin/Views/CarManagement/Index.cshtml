@using CarSellingPlatform.Web.ViewModels.CarManagement
@model IEnumerable<CarManagementIndexView>
<div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Cars</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Brand</th>
                                    <th>Model</th>
                                    <th>Year</th>
                                    <th>Seller</th>
                                    <th>Email</th>
                                    <th class="text-center" style="width: 160px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var car in Model)
                                {
                                    <tr>
                                        <form asp-controller="UserManagement" asp-action="UpdateUserRole" method="post">
                                            <td>
                                                @car.Brand
                                                <input type="hidden" name="UserId" value="@car.Id" />
                                            </td>
                                            <td>
                                                @car.Model
                                            </td>
                                            <td>
                                                @car.Year
                                            </td>
                                            <td>
                                                @car.SellerName
                                            </td>
                                            <td>
                                                @car.Email
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center" >
                                                    <form method="post" asp-area="Admin" asp-controller="CarManagement" asp-action="UpdateUserRole" asp-route-id="@car.Id" class="me-2" >
                                                        <button type="submit" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-save"></i> Edit
                                                        </button>
                                                    </form>
                                                    <form asp-area="Admin" asp-controller="CarManagement" asp-action="DeleteUser" asp-route-id="@car.Id" method="post">
                                                        <button type="submit" class="btn btn-primary btn-sm">
                                                            <i class="fas fa-heart-broken me-1"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </form>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @if (!Model.Any())
                        {
                            <div class="text-center py-4">
                                <p class="text-muted">No users found.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>