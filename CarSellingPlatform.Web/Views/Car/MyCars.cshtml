@using CarSellingPlatform.Web.ViewModels.Car
@model PagedListViewModel<MyCarsViewModel>
@{
    ViewData["Title"] = $"My Cars";
}
<div id="carResults">
    @if (Model?.Items?.Any() == true)
    {
        <div class="row">
            @foreach (var car in Model.Items)
            {
                <div class="col-12 mb-4">
                    <div class="card car-card shadow-sm h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3 col-lg-2">
                                    <div class="car-image-container">
                                        @if (!string.IsNullOrEmpty(car.ImageUrl))
                                        {
                                            <img src="@car.ImageUrl" alt="@car.CarModel" class="img-fluid rounded car-image"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        }
                                        else if (car.ImageData != null && car.ImageData.Length > 0)
                                        {
                                            <img src="@Url.Action("GetCarImage", "Car", new { id = car.Id })"
                                                 alt="@car.CarModel" class="img-fluid rounded car-image"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        }
                                        else
                                        {
                                            <img src="~/image/no-photo.jpg" alt="No Image" class="img-fluid rounded car-image" />
                                        }
                                    </div>
                                </div>

                                <!-- Details -->
                                <div class="col-md-6 col-lg-7">
                                    <h5 class="card-title mb-2">@car.Brand @car.CarModel </h5>
                                </div>

                                <!-- Price + Actions -->
                                <div class="col-md-3 text-center mt-3 mt-md-0">
                                    <h3 class="text-secondary fw-bold mb-3">$@car.Price.ToString("N0")</h3>

                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("EditCar", "Car", new { id = car.Id })" class="btn btn-primary btn-sm">
                                            <i class="fas fa-pen me-1"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <div class="col-12 d-flex justify-content-center">
            <nav>
                <ul class="pagination">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                    </li>

                    <li class="page-item disabled">
                        <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                    </li>

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    You have no car listings.
                </div>
            </div>
        </div>
    }
</div>