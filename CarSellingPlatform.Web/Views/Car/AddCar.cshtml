@using CarSellingPlatform.Web.ViewModels.Car
@model CarSellingPlatform.Web.ViewModels.Car.AddCarViewModel

@{
    ViewData["Title"] = "Sell a car";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-car me-2"></i>Sell A Car
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="AddCar" method="post" enctype="multipart/form-data" novalidate>
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.BrandId" class="form-label">Brand</label>
                                    <select asp-for="@Model.BrandId" class="form-select" asp-items="@(new SelectList(Model.Brands, "Id", "Name"))">
                                        <option value="">-- Select Brand --</option>
                                    </select>
                                    <span asp-validation-for="@Model.BrandId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.CarModel" class="form-label">@Model.CarModel</label>
                                    <input asp-for="@Model.CarModel" class="form-control" placeholder="Enter car model"/>
                                    <span asp-validation-for="@Model.CarModel" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.CategoryId" class="form-label">Category</label>
                                    <select asp-for="@Model.CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Color" class="form-label">Color</label>
                                    <input asp-for="@Model.Color" class="form-control" placeholder="Enter car color" />
                                    <span asp-validation-for="@Model.Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Year" class="form-label">Year</label>
                                    <input asp-for="@Model.Year" class="form-control" type="number" min="1886" max="2100" placeholder="Enter year" inputmode="numeric" pattern="[0-9]*" />
                                    <span asp-validation-for="@Model.Year" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Price" class="form-label">Price ($)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="@Model.Price" class="form-control" type="number" step="1" min="1" placeholder="0" inputmode="decimal" max="10000000" />
                                    </div>
                                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="@Model.ImageUrl" class="form-control" type="url" placeholder="https://example.com/car-image.jpg" />
                            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="ImageFile" class="form-label">Upload Image</label>
                            <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Description" class="form-label">Description</label>
                            <textarea asp-for="@Model.Description" class="form-control" rows="4" placeholder="Enter detailed description of the car..."></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="@Model.DealershipId" class="form-label">Dealership</label>
                                <select asp-for="@Model.DealershipId" class="form-select" asp-items="@(new SelectList(Model.Dealerships, "Id", "Name"))">
                                    <option value="">-- Select Dealership --</option>
                                </select>
                                </div>
                        </div>

                        <!-- Engine Information -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Engine Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="@Model.Displacement" class="form-label">Displacement</label>
                                            <input asp-for="@Model.Displacement" class="form-control" placeholder="e.g., 2.0L" />
                                            <span asp-validation-for="@Model.Displacement" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="@Model.Horsepower" class="form-label">Horsepower (HP)</label>
                                            <input asp-for="@Model.Horsepower" class="form-control" type="number" min="1" max="2000" placeholder="Enter horsepower" inputmode="numeric" pattern="[0-9]*" />
                                            <span asp-validation-for="@Model.Horsepower" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="@Model.Cylinders" class="form-label">Cylinders</label>
                                            <input asp-for="@Model.Cylinders" class="form-control" type="number" min="1" max="20" placeholder="Enter number of cylinders" inputmode="numeric" pattern="[0-9]*" />
                                            <span asp-validation-for="@Model.Cylinders" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="@Model.EngineCode" class="form-label">Engine Code (Optional)</label>
                                            <input asp-for="@Model.EngineCode" class="form-control" placeholder="e.g., K20A, 2JZ-GTE" />
                                            <span asp-validation-for="@Model.EngineCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="@Model.FuelTypeId" class="form-label">Fuel Type</label>
                                            <select asp-for="@Model.FuelTypeId" class="form-select" asp-items="@(new SelectList(Model.FuelTypes, "Id", "Type"))">
                                                <option value="">-- Select Fuel Type --</option>
                                            </select>
                                            <span asp-validation-for="@Model.FuelTypeId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="@Model.TransmissionId" class="form-label">Transmission</label>
                                            <select asp-for="@Model.TransmissionId" class="form-select" asp-items="@(new SelectList(Model.Transmissions, "Id", "Type"))">
                                                <option value="">-- Select Transmission --</option>
                                            </select>
                                            <span asp-validation-for="@Model.TransmissionId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Add Car
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}