@using CarSellingPlatform.Web.ViewModels
@model CarSellingPlatform.Web.ViewModels.Car.DeleteCarViewModel
@{
    ViewData["Title"] = "Delete Car";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.CarModel</h3>
                <p class="mb-0"><strong>Published By:</strong> @Model.Seller</p>
                <p class="text-danger mt-3">
                    Are you sure you want to delete <strong>@Model.CarModel</strong>?
                </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="DeleteCar" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CarModel" />
                    <input type="hidden" asp-for="SellerId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                </form>
                <a asp-controller="Car" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>