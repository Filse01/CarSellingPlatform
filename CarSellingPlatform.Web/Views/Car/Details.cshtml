@model CarSellingPlatform.Web.ViewModels.Car.DetailsCarViewModel

@{
    ViewData["Title"] = $"{Model.Year} {Model.BrandName} {Model.CarModel}";
}

<link rel="stylesheet" href="~/css/details.css"/>

<div class="container-fluid">
    <a href="@Url.Action("Index", "Car")" class="back-button">‚Üê Back to Cars</a>
    
    <div class="car-details-container">
        <div class="car-header">
            <h1>@Model.Year @Model.BrandName @Model.CarModel</h1>
            <div class="car-brand">@Model.CategoryName</div>
            <div class="seller-badge @(Model.IsUserSeller ? "owner-seller" : "dealer-seller")">
                @(Model.IsUserSeller ? "Owner Seller" : "Dealer")
            </div>
        </div>

        <div class="car-content">
            <div class="image-section">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.BrandName @Model.CarModel" class="car-image" />
                }
                else
                {
                    <div class="no-image">No Image Available</div>
                }
            </div>

            <div class="details-section">
                <div class="price-tag">$@Model.Price.ToString("N0")</div>

                <div class="details-grid">
                    <div class="detail-item">
                        <div class="detail-label">Category</div>
                        <div class="detail-value">@Model.CategoryName</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Year</div>
                        <div class="detail-value">@Model.Year</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Fuel Type</div>
                        <div class="detail-value">@Model.FuelTypeName</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Transmission</div>
                        <div class="detail-value">@Model.TransmissionTypeName</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Color</div>
                        <div class="detail-value">@Model.Color</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Displacement</div>
                        <div class="detail-value">@Model.Displacement</div>
                    </div>
                </div>

                <div class="specs-highlight">
                    <h3>Performance Specs</h3>
                    <div class="specs-grid">
                        <div class="spec-item">
                            <div class="spec-value">@Model.HorsePower</div>
                            <div class="spec-label">HP</div>
                        </div>
                        <div class="spec-item">
                            <div class="spec-value">@Model.Cylinders</div>
                            <div class="spec-label">Cylinders</div>
                        </div>
                        <div class="spec-item">
                            <div class="spec-value">@Model.Displacement</div>
                            <div class="spec-label">Engine</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="description-section">
            <h3>Description</h3>
            <p class="description-text">@Model.Description</p>
        </div>
    </div>
</div>
