@model CarSellingPlatform.Web.ViewModels.Car.PagedListViewModel<CarSellingPlatform.Web.ViewModels.Car.IndexCarViewModel>

@{
    ViewData["Title"] = "Cars for Sale";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-center mb-3">Cars for Sale</h1>
            <p class="text-center text-muted">Find your perfect car from our extensive collection</p>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6 mb-2">
            <input id="searchInput" class="form-control" placeholder="Search by model or brand..." />
        </div>
    </div>
    <div class="col-md-6">
        <select id="brandFilter" class="form-select">
            <option value="">-- All Brands --</option>
            @foreach (var brand in Model.Items)  // âœ… You'll need to pass Brands to the ViewModel
            {
                <option value="@brand.BrandId">@brand.BrandName</option>
            }
        </select>
    </div>
    <div id="carResults">
    @if (Model?.Items != null && Model.Items.Any())
    {
        <div class="row">
            @foreach (var car in Model.Items)
            {
                <div class="col-12 mb-4">
                    <div class="card car-card shadow-sm h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- Car Image -->
                                <div class="col-md-3 col-lg-2">
                                    <div class="car-image-container">
                                        @if (!string.IsNullOrEmpty(car.ImageUrl))
                                        {
                                            <img src="@car.ImageUrl" 
                                                 alt="@car.CarModel" 
                                                 class="img-fluid rounded car-image"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        }
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center car-placeholder @(string.IsNullOrEmpty(car.ImageUrl) ? "" : "d-none")" 
                                             style="height: 120px;">
                                            <i class="fas fa-car fa-3x text-muted"></i>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Car Details -->
                                <div class="col-md-6 col-lg-7">
                                    <h5 class="card-title mb-2">@car.BrandName @car.CarModel (@car.CategoryName)</h5>
                                    <p class="card-text text-muted mb-2">@car.Description</p>
                                    
                                    <div class="row text-sm">
                                        <div class="col-6 col-lg-4 mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar-alt me-1"></i>
                                                Year: <strong>@car.Year</strong>
                                            </small>
                                        </div>
                                        <div class="col-6 col-lg-4 mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-horse me-1"></i>
                                                HP: <strong>@car.HorsePower</strong>
                                            </small>
                                        </div>
                                        <div class="col-6 col-lg-4 mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-palette me-1"></i>
                                                Color: <strong>@car.Color</strong>
                                            </small>
                                        </div>
                                        <div class="col-6 col-lg-4 mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-cog me-1"></i>
                                                Engine Displacement: <strong>@car.Displacement</strong>
                                            </small>
                                        </div>
                                        <div class="col-6 col-lg-4 mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-cog me-1"></i>
                                                Fuel Type: <strong>@car.FuelTypeName</strong>
                                            </small>
                                        </div>
                                        <div class="col-6 col-lg-4 mb-1">
                                            <small class="text-muted">
                                                <i class="fas fa-cog me-1"></i>
                                                Transmission: <strong>@car.TransmissionTypeName</strong>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Price and Actions -->
                                <div class="col-md-3 col-lg-3 text-center">
                                    <div class="price-section d-none d-md-block">
                                        <h3 class="text-primary fw-bold mb-3">
                                            $@car.Price.ToString("N0")
                                        </h3>
                                        @if (!car.IsUserSeller)
                                        {
                                            <div class="d-grid gap-2">
                                                <a href="@Url.Action("Details", "Car", new { id = car.Id })"
                                                   class="btn btn-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>
                                                    View Details
                                                </a>
                                                
                                                @if (User?.Identity?.IsAuthenticated == true && !car.IsUserSeller && !car.IsUserFavorite)
                                                {
                                                    <div class="d-flex gap-2 align-items-center">
                                                        <form asp-controller="Car" asp-action="AddFavoriteCars" method="post">
                                                            <input type="hidden" name="id" value="@car.Id" />
                                                            <button type="submit" class="btn btn-primary">Add to Favorites</button>
                                                        </form>

                                                        <a asp-controller="Chat" asp-action="Create"
                                                           asp-route-carId="@car.Id" asp-route-sellerId="@car.SellerId"
                                                           class="btn btn-primary">
                                                            Contact Seller
                                                        </a>
                                                    </div>
                                                }

                                            </div>
                                        }
                                        else
                                        {
                                            <div class="d-grid gap-2">
                                                <a href="@Url.Action("EditCar", "Car", new { id = car.Id })"
                                                   class="btn btn-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Edit
                                                </a>
                                                </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Mobile Price Section -->
                            <div class="row d-md-none">
                                <div class="col-12">
                                    <div class="price-section mobile-price-section text-center">
                                        <h3 class="text-primary fw-bold mb-3">
                                            $@car.Price.ToString("N0")
                                        </h3>
                                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                                            <a href="@Url.Action("Details", "Car", new { id = car.Id })" 
                                               class="btn btn-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>
                                                View Details
                                            </a>
                                            <a href="@Url.Action("Contact", "Car", new { id = car.Id })" 
                                               class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-phone me-1"></i>
                                                Contact Seller
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-12 d-flex justify-content-center">
            <nav>
                <ul class="pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Previous</span></li>
                    }

                    <li class="page-item disabled">
                        <span class="page-link">
                            Page @Model.PageNumber of @Model.TotalPages
                        </span>
                    </li>

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Next</span></li>
                    }
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    No cars are currently available. Please check back later!
                </div>
            </div>
        </div>
    }
    </div>
</div>


@section Scripts {
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchInput");
        const brandFilter = document.getElementById("brandFilter");
        function loadCars(page = 1) {
            const search = searchInput.value;
            const brandId = brandFilter.value;
            const baseUrl = '@Url.Action("Filter", "Car")'
            fetch(`${baseUrl}?page=${page}&search=${encodeURIComponent(search)}&brandId=${encodeURIComponent(brandId)}`, {
                headers: {
                    "X-Requested-With": "XMLHttpRequest"
                }
            })
            .then(res => res.text())
            .then(html => {
                document.getElementById("carResults").innerHTML = html;

                // Re-bind pagination links
                document.querySelectorAll("#carResults .page-link").forEach(link => {
                    link.addEventListener("click", function (e) {
                        e.preventDefault();
                        const page = new URL(link.href).searchParams.get("page");
                        loadCars(page);
                    });
                });
            })
                .catch(err => console.log(err));
        }

        searchInput.addEventListener("input", () => loadCars(1));
        brandFilter.addEventListener("change", () => loadCars(1));
    });
</script>
}
