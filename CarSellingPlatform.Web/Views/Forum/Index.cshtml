@model CarSellingPlatform.Web.ViewModels.Car.PagedListViewModel<CarSellingPlatform.Web.ViewModels.Forum.IndexPostViewModel>
@{
    ViewData["Title"] = "Forum";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Community Forum</h1>
        <div>
            <a asp-controller="Forum" asp-action="AddPost" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Add Post
            </a>
        </div>
    </div>
    <div class="d-flex justify-content-end mb-3">
        <form asp-action="Index" method="get" class="d-flex align-items-center">
            <label for="sortBy" class="form-label me-2 mb-0">Sort by:</label>
            <select name="sortBy" id="sortBy" class="form-select w-auto" onchange="this.form.submit()">
                <option value="latest" selected="@(Model.SortBy == "latest")">Latest Posts</option>
                <option value="comments" selected="@(Model.SortBy == "comments")">Most Comments</option>
            </select>
        </form>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-12">
            @if (Model.Items.Any())
            {
                foreach (var post in Model.Items)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header d-flex justify-content-between">
                            <h5 class="mb-0">
                                <a asp-controller="Forum" asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none">
                                    @post.Title
                                </a>
                            </h5>
                            </div>
                        <div class="card-body">
                            @{
                                // Truncate long post text for the index page
                                const int maxDisplayLength = 300;
                                string postText = post.Text.Length > maxDisplayLength 
                                    ? post.Text.Substring(0, maxDisplayLength) + "..." 
                                    : post.Text;
                            }
                            <p class="card-text">@postText</p>
                        </div>
                        <div class="card-footer text-muted d-flex justify-content-between">
                            <small>
                                Posted by <strong>@(post.Author?.FirstName + " " + post.Author?.LastName ?? "Unknown")</strong>
                            </small>
                            <small>
                                <span class="badge rounded-pill bg-secondary">@post.Comments.Count() Comments</span>
                            </small>
                        </div>
                    </div>
                    
                }
                <div class="col-12 d-flex justify-content-center">
                    <nav>
                        <ul class="pagination">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                            </li>

                            <li class="page-item disabled">
                                <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                            </li>

                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <div class="text-center p-5 border rounded bg-light">
                    <h3>No posts yet!</h3>
                    <p>Be the first to start a discussion.</p>
                    <a asp-controller="Forum" asp-action="AddPost" class="btn btn-success">Create the First Post</a>
                </div>
            }
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">