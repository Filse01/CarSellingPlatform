@model CarSellingPlatform.Web.ViewModels.Forum.AddPostInputModel
@{
    ViewData["Title"] = "Create a New Post";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h3 mb-0">Create a New Post</h1>
                </div>
                <div class="card-body">
                    <form asp-controller="Forum" asp-action="AddPost" method="post">
                        @* This shows model-level errors, not field-specific ones *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="A clear and descriptive title..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Text" class="form-label">Your Message</label>
                            <textarea asp-for="Text" class="form-control" rows="10" placeholder="Provide details, background, and what you've already tried."></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        
                        <hr/>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}